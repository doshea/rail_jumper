%h3 Profile
= render partial: 'layouts/errors', locals: {error_object: @current_user}
= form_for @current_user, url: url_for(controller: :account, action: :update) do |f|
  = f.label :first_name
  = f.text_field :first_name
  = f.label :last_name
  = f.text_field :last_name
  = f.label :image
  = f.password_field :image
  = f.submit 'Update', class: 'button'