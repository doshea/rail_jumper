%nav.top-bar{data: {topbar: true, options: 'is_hover: false'}}
  %ul.title-area
    %li.name
      %h1
        = link_to 'Home', root_path
  %section.top-bar-section
    -# Left Nav Section
    %ul.left
      - if is_admin?
        %li.divider
        %li
          = link_to 'Admin', admin_path
      %li.divider
    -# Right Nav Section
    %ul.right
      %li.divider
      - if @current_user
        %li.has-dropdown
          = link_to '#' do
            = @current_user.username
          %ul.dropdown
            %li
              = link_to account_path do
                %i.fi-torso
                Account
            %li
              = link_to login_path, method: :delete do
                %i.fi-power
                Log out
      - else
        %li
          = link_to new_user_path do
            %i.fi-pencil
            Register
        %li.divider
        %li
          = link_to login_path do
            %i.fi-power
            Log in
      %li.divider
