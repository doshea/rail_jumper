!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %title change_me
    = stylesheet_link_tag    "application", :media => "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    %header
      = link_to 'Home', root_path
      = @current_user.present? ? link_to('Log out', login_path, method: :delete) : link_to('Log in', login_path)
      = link_to('Users', users_path) if @current_user && @current_user.is_admin
    = yield
    / Foundation initialization javascript
    :javascript
      $(document).foundation(null,null,null,null,true);