.row
  .large-3.columns
    = form_tag '/login' do
      = label_tag :username
      = text_field_tag :username, nil, :autofocus => true
      = label_tag :password
      = password_field_tag :password
      = label_tag :remember_me
      = check_box_tag :remember_me, 1, params[:remember_me]
      %br
      = submit_tag 'Log In', :class => 'button tiny radius success'
  .large-9.columns
